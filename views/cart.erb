<h3 class="display-4">Your cart</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Qty</th>
      <th scope="col">Price</th>
      <th scope="col">Summary</th>
    </tr>
  </thead>
  <tbody>
  	
  	<% total_price = 0 %>
  	<% total_qty = 0 %>
	<% @items.each do |item| %>

	    <tr>
	      <td><%= item[0].title %></td>
	      <td><%= item[1] %></td>
	      <td><%= item[0].price %></td>
	      <td><%= item[0].price * item[1].to_i %></td>
	    </tr>

	  <% total_price += item[0].price %>
	  <% total_qty += item[1].to_i %>

	<% end %>
		
	    <tr>
	      <td><strong>TOTAL: </strong></td>
	      <td><strong><%= total_qty %></strong></td>
	      <td></td>
	      <td><strong><%= total_price %> $</strong></td>
	    </tr>
		
  </tbody>
</table>
	
<form action="/place_order" method="POST" role="form">

	<input type="hidden" name="order[orders_input]" value="<%= @orders_input%>">	

  <div class="form-group">
    <label>Name</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Your name">
  </div>

  <div class="form-group">
    <label>Phone</label>
    <input name="order[phone]" type="text" class="form-control" placeholder="Your phone">
  </div>

  <div class="form-group">
    <label>Delivery address</label>
    <textarea name="order[address]" class="form-control" placeholder="Delivery address"></textarea> 
  </div>

  <button type="submit" class="btn btn-success">Place your order!</button>

</form>
